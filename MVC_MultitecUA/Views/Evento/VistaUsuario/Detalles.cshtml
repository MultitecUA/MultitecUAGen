@model MultitecUAGenNHibernate.EN.MultitecUA.EventoEN

@{
    ViewBag.Title = "Detalles del evento";
}

<h2>Detalles del Evento: @Html.DisplayFor(model=> model.Nombre)</h2>
<br />
<p class="text-center">
    <label>@Html.ActionLink("Inicio", "Index", "Home")</label><span> >> </span><label><a href="../TodosEventos">Eventos</a></label><span> >> </span><label>@ViewBag.Title</label>
</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
           Fecha de inicio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>

        <dt>
            Fecha de fin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaFin)
        </dd>

        <dt>
            Fecha de inicio de inscripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaInicioInscripcion)
        </dd>

        <dt>
            Fecha tope de inscripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaTopeInscripcion)
        </dd>
        <dt>
            Fotos
        </dt>
        <dd>
            @{
                foreach (string foto in (System.Collections.IList)ViewData["listaFotosEvento"])
                {
                    <img src="@foto" alt="Foto del evento" style="max-width:25%;">
                }
            }
        </dd>
        <dt>
            Categorias
        </dt>

        <dd>
            <ul>
                @{
                    foreach (string categoria in (System.Collections.ArrayList)ViewData["CategoriasEvento"])
                    {
                        <li>@categoria</li>
                    }
                }
            </ul>
        </dd>
        <dt>
            Nº proyectos presentados:
        </dt>
        <dd>
            @ViewData["proyectos"]
        </dd>
        <dt>
            Participantes:
        </dt>
        <dd>
            @ViewData["participantes"]
        </dd>

    </dl>
</div>

<div class="form-inline">
    @Html.ActionLink("Proyectos presentados", "ProyectosPorEvento", "Proyecto", new { id = ViewData["idEvento"] }, new { @class = "btn btn-default" })
    @Html.ActionLink("Crear recuerdo", "Create", "Recuerdo", new { idEvento = ViewData["IdEvento"] }, new { @class = "btn btn-default" })
    <!-- Esto quiero cambiarlo a un partialView -->
    @Html.ActionLink("Ver Recuerdos", "porEvento", "Recuerdo", new { idEvento = ViewData["IdEvento"] }, new { @class = "btn btn-default" })
    <!-- Html.Partial() -->
</div>

<br />

<p>
    @Html.ActionLink("Volver a la lista", "TodosEventos", "Evento")
</p>
