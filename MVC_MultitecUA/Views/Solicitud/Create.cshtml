@model MVC_MultitecUA.Models.Solicitud

@{
    ViewBag.Title = "Crear";
}

<h2>Crear Solicitud</h2>

<p class="text-center">
    <label>@Html.ActionLink("Inicio", "Index", "Home")</label><span> >> </span><label>@Html.ActionLink("Solicitudes", "Index")</label><span> >> </span><label>@ViewBag.Title</label>
</p>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nick_Solicitante, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownList("Nick_Solicitante", new SelectList((System.Collections.IEnumerable)ViewData["ListaNicks"]), new { @class = "form-control" , @title = "El nombre solo puede contener letras, números. Maximo 90 caracteres" })
            <!--Html.ValidationMessageFor(model => model.Nick_Solicitante.Id, "", new { class = "text-danger" })-->
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre_Proyecto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Nombre_Proyecto", new SelectList((System.Collections.IEnumerable)ViewData["listaNombreProyectos"]), new { @class = "form-control" })
            <!--Html.ValidationMessageFor(model => model.Nombre_Proyecto.Id, "", new { class = "text-danger" })-->
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
