@model MVC_MultitecUA.Models.MensajeModel

@{
	ViewBag.Title = "Detalles";
}

<h2>Detalles de Mensaje</h2>

@{
	if (TempData["bien"] != null)
	{
		<p class="text-success"><span class="glyphicon glyphicon-check"></span> @TempData["bien"] </p>
		TempData.Remove("bien");
	}
}

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.NickReceptor)
		</dt>
		<dd>
			@Html.ActionLink(Model.NickReceptor, "Detalles", "Usuario", new { nick = Model.NickReceptor }, null)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Titulo)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Titulo)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Cuerpo)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Cuerpo)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.BandejaAutor)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.BandejaAutor)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Fecha)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Fecha)
		</dd>
	</dl>
</div>
<p>
	@Html.ActionLink("Volver a mis mensajes", "MisMensajes", null, new { @class = "btn btn-default" })
</p>
