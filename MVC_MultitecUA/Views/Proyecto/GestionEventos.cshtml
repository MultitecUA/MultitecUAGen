@model MultitecUAGenNHibernate.EN.MultitecUA.ProyectoEN

@{
    ViewBag.Title = "Gestion de Eventos";
}

<h2>Gestion de Eventos de @ViewData["nombre"]</h2>

<p class="text-center">
    <label>@Html.ActionLink("Inicio", "Index", "Home")</label><span> >> </span><label>@Html.ActionLink("Proyectos", "Index")</label><span> >> </span><label>@ViewBag.Title</label>
</p>

<div>
    <hr />
    <div class="dl-horizontal">
        @using (Html.BeginForm("AgregarEvento", "Proyecto"))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="form-horizontal">
                <label>Participar en Evento:</label>
                @Html.DropDownList("Evento", new SelectList((System.Collections.IEnumerable)ViewData["listaEventosAgregar"]), new { @class = "form-control" })
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        }

        @using (Html.BeginForm("EliminarEvento", "Proyecto"))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="form-horizontal">
                <label>Eliminar Evento:</label>
                @Html.DropDownList("Evento", new SelectList((System.Collections.IEnumerable)ViewData["listaEventosEliminar"]), new { @class = "form-control" })
                <input type="submit" value="Eliminar" class="btn btn-default" />
            </div>
        }
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
