@model MultitecUAGenNHibernate.EN.MultitecUA.ProyectoEN

@{
    ViewBag.Title = "Gestion de Moderdadores";
}

<br />
<h2>Gestion de Moderdadores de @ViewData["nombre"]</h2>
<br />
<p class="text-center">
    <label>@Html.ActionLink("Inicio", "Index", "Home")</label><span> >> </span><label>@Html.ActionLink("Todos los Proyectos", "ProyectosPresentados")</label><span> >> </span><label>@ViewBag.Title</label>
</p>
<br />
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Moderadores:</dt>
        <dd>
            <ul>

                @{
                    foreach (var e in (System.Collections.IEnumerable)ViewData["listaUsuariosEliminar"])
                    {
                        <li style="font-weight: normal;">@e </li>
                    }
                }
            </ul>
        </dd>
    </dl>
    <div class="dl-horizontal">
        @using (Html.BeginForm("AgregarModerador", "Proyecto"))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="form-inline form-group">
                <label style="min-width:12em;">Agregar Moderador:</label>
                @Html.DropDownList("Moderador", new SelectList((System.Collections.IEnumerable)ViewData["listaUsuariosAgregar"]), new { @class = "form-control", style = "min-width:15em;" })
                <input type="submit" value="Agregar" class="btn btn-default"  style="min-width:8em;"/>
            </div>
        }

        @using (Html.BeginForm("EliminarModerador", "Proyecto"))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="form-inline form-group">
                <label style="min-width:12em;">Eliminar Moderador:</label>
                @Html.DropDownList("Moderador", new SelectList((System.Collections.IEnumerable)ViewData["listaUsuariosEliminar"]), new { @class = "form-control", style = "min-width:15em;" })
                <input type="submit" value="Eliminar" class="btn btn-default"  style="min-width:8em;"/>
            </div>
        }
    </div>
</div>
<p>
    @Html.ActionLink("Volver", "Detalles", new { id = Model.Id }, new { @class = "btn btn-default" })
</p>